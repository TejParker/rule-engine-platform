HBASE_CONF_hbase_rootdir=hdfs://namenode:9000/hbase
HBASE_CONF_hbase_cluster_distributed=false
HBASE_CONF_hbase_zookeeper_property_dataDir=/zookeeper-data
HBASE_CONF_hbase_zookeeper_quorum=hbase

HBASE_CONF_hbase_master_port=16000
HBASE_CONF_hbase_master_info_port=16010
HBASE_CONF_hbase_regionserver_port=16020
HBASE_CONF_hbase_regionserver_info_port=16030
HBASE_CONF_hbase_zookeeper_peerport=2888
HBASE_CONF_hbase_zookeeper_leaderport=3888
HBASE_CONF_hbase_zookeeper_property_clientPort=2181

# 增加超时和重试配置
HBASE_CONF_hbase_client_retries_number=10
HBASE_CONF_hbase_client_pause=1000
HBASE_CONF_hbase_rpc_timeout=60000
HBASE_CONF_hbase_client_operation_timeout=300000
HBASE_CONF_hbase_client_scanner_timeout_period=300000

# ZooKeeper相关配置
HBASE_CONF_zookeeper_session_timeout=30000
HBASE_CONF_hbase_zookeeper_property_tickTime=3000
HBASE_CONF_hbase_zookeeper_property_initLimit=10
HBASE_CONF_hbase_zookeeper_property_syncLimit=5

# 区域服务器配置
HBASE_CONF_hbase_regionserver_lease_period=60000
HBASE_CONF_hbase_master_assignment_timeoutmonitor_period=10000
